<%= render 'shared/header' %>  

<div class="customer-show">
  <div class="customer-top">
    <div class="customer-edit">
      <%= link_to "編集・削除", edit_customer_registration_path(current_customer), class:"customer-edit-link"%>
    </div>

    <div class="customer-card">
      <% if current_customer.card.nil? %>
        <%= link_to "クレジットカードの登録", new_card_path, class:"customer-card-link" %>
      <% elsif current_customer.card.present? %>
        <%= link_to "クレジットカードの変更", "#", class:"customer-card-link" %>
      <% end %>
    </div>
  </div>
  <div class="customer-informations">
    <div class="customer-information">
      ニックネーム
    </div>
    <%= current_customer.nickname %>
    <div class="customer-information">
      お名前
    </div>
    <%= current_customer.family_name %><%= current_customer.first_name %>
    <div class="customer-information">
      メールアドレス
    </div>
    <%= current_customer.email %>
    <div class="customer-information">
      電話番号
    </div>
    <%= current_customer.phone_num %>
    <div class="customer-information">
      誕生日
    </div>
    <%= current_customer.birthday %>
  </div>
</div>


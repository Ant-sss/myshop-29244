<h1>出品画面</h1>
  <div class="items_main">
    <%= form_with method: @item, class:"items", local: true do |f| %>
      <div class="item_images">
        商品の写真をクリックしてアップロード
        <%= f.file_field :image, class:"item_image" %>
      </div>
      <div class="item_index">
        商品名
        <%= f.text_field :name, class:"imte_name_input", placeholder:"商品名（必須 10文字まで）", maxlength:"10" %>
      </div>
      <div class="item_text">
        商品説明
        <%= f.text_area :text, class:"item_text_input", placeholder:"商品説明（必須 40文字まで）", maxlength:"40" %>
      </div>
      <div class="item_category">
        商品のカテゴリー
        <div class="item_catgory_input">
            <%= f.collection_select(:category_id, @item_category_parent, :id, :name, {include_blank:"選択してください"}, {id:"parent_category"}) %>
        </div>
      </div>
      <div class="item_shipfrom">
        発送元
        <%= f.collection_select(:shipfrom_id, Shipfrom.all, :id, :name, {}, {class:"select_box"}) %>
      </div>
      <div class="item_price">
        販売価格
        <div class="price_yen">
        ￥
        </div>
        <%= f.text_field :price, class:"item_price", placeholder:"例） 300" %>
      </div>
    <% end %>
  </div>